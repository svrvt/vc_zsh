alias gdh="git diff HEAD"
alias gg="lazygit"
alias grep="grep --color=auto"

# alias java8="export JAVA_HOME=/usr/lib/jvm/java-8-openjdk/jre"
# alias java11="export JAVA_HOME=/usr/lib/jvm/java-11-openjdk/"

