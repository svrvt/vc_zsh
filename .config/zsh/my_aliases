alias fdir="find . -type d -name"
alias ffil="find . -type f -name"
alias files="fzf --preview 'bat --color=always --style=numbers --line-range=:500 {}'"

alias ga="git add"
alias gc="git commit -m"
# alias gl="git pull --rebase --autostash"
alias gp="git push"
